<div class="d-flex justify-content-center align-items-center vh-100">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container h-custom bg-primary bg-gradient wide-container" style="--bs-bg-opacity: .3; border-radius: 10px;">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <%= image_tag('logo.png', alt: 'Logo', class: 'img-fluid') %>
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        
          <div class="d-flex flex-column gap-1">
          
             
             
            <p class="lead fw-normal mb-0">Sign in</p>
             
              <div class="message-container text-wrap">
             <% if alert %>
          <div class="alert alert-danger">
           <%= alert %>
           <%= session[:show_unapproved_message] %>
             </div>
<% end %>
              </div>
            <div class="form-outline">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control form-control-lg' } %>
            </div>
            <div class="form-outline">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: 'form-control form-control-lg' } %>
            </div>

            <div class="d-flex justify-content-between align-items-center">
              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-0">
                  <%= f.check_box :remember_me, class: 'form-check-input me-2' %>
                  <%= f.label :remember_me, class: 'form-check-label' %>
                </div>
              <% end %>
              <div style="margin-right: 10px;"></div><!-- Add a spacer here -->
              <a href="#" class="link" id="forgot-password-link">forgot password?</a>
            </div>
            
            <div class="text-center text-lg-start mt-1">
              <%= f.submit "Log in", class: 'btn btn-primary btn-lg', style: 'padding-left: 2.5rem; padding-right: 2.5rem;', id: 'login-button', onclick: 'checkUserApproval(); return false;' %>
            </div>
          </div>
        </div>
      </div>
    </div>
   
  <% end %>
</div>